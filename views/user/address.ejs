<%-include('userNavbar')%>
<body>
    <style>
        body {
            height: auto;
            font-family: "Nunito Sans", sans-serif;
            -webkit-font-smoothing: antialiased;
            margin: 0;
        }

        .box {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            height: auto;
            margin-bottom: 30px;
        }

        #userContainer {
            width: 90%;
            display: flex;
            border: 1px solid black;
            border-radius: 15px;
            height: auto;
        }

        .sidebar {
            background-color: #000;
            color: #fff;
            padding: 20px;
            min-width: 200px;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            transition: 0.5s;
            margin-left: -15px;
            border-bottom-left-radius: 15px;
            border-top-left-radius: 15px;
        }

        .profile-icon {
            width: 100px;
            height: 100px;
            border: 1px solid red;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .profile-icon img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
        }

        .sidebar-list {
            list-style-type: none;
            padding: 0;
            text-align: left;
        }

        .sidebar-list a {
            text-decoration: none;
            color: #fff;
            padding: 10px;
            display: block;
            transition: 0.3s;
        }

        .sidebar-list a:hover {
            background-color: #333;
        }

        .sidebar-list a.active {
            background-color: #e53637;
            color: #fff;
        }

        .hamburger-menu {
            display: none;
            cursor: pointer;
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 999;
            transition: 0.5s;
        }

        .hamburger-menu div {
            width: 30px;
            height: 3px;
            background-color: #1e1d1d;
            margin: 4px 2px;
            transition: 0.4s;
        }

        .profile-welcome {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .content {
            text-align: center;
            padding: 20px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
        }

        .content p {
            margin-bottom: 15px;
        }

        .add-address-form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .add-address-form label {
            margin-bottom: 10px;
            font-weight: bold;
        }

        .add-address-form input {
            padding: 8px;
            margin-bottom: 20px;
            width: 60%;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .add-address-button {
            background-color: #e53637;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .add-address-button:hover {
            background-color: #c32434;
        }

        .address-card {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 15px;
            margin: 15px 0;
            background-color: #f9f9f9;
        }

        .save-address-input {
            margin-bottom: 10px;
            padding: 8px;
            width: 60%;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .save-address-button {
            background-color: #e53637;
            color: #fff;
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .save-address-button:hover {
            background-color: #c32434;
        }

        @media only screen and (max-width: 768px) {
            .sidebar {
                display: none;
            }

            .hamburger-menu {
                display: block;
            }

            .content {
                padding: 10px;
            }

            .box {
                height: auto;
                margin-bottom: 20px;
            }

            #userContainer {
                flex-direction: column;
                height: auto;
                width: 96%;
            }

            .hamburger-menu.active div:nth-child(1) {
                transform: rotate(-45deg) translate(-5px, 6px);
                background-color: #e53637;
            }

            .hamburger-menu.active div:nth-child(2) {
                opacity: 0;
            }

            .hamburger-menu.active div:nth-child(3) {
                transform: rotate(45deg) translate(-5px, -6px);
                background-color: #e53637;
            }

            .sidebar.active {
                display: flex;
                flex-direction: column;
                align-items: center;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: #000;
                z-index: 998;
            }
        }
    </style>

    <div class="box">
        <div class="hamburger-menu" onclick="toggleSidebar()">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <% if (user) { %>
            <div class="container" id="userContainer">
                <div class="sidebar" id="sidebar">
                    <div class="profile-icon">
                        <img src="<%= user.userProfile %>" alt="profile img">
                    </div>
                    <ul class="sidebar-list">
                        <li><a href="/user-profile/<%=user._id%>"><i class="fa-regular fa-address-card" style="color: #f7f9fc;margin-right: 6px;"></i> Profile</a></li>
                        <li><a href="/wallet/<%=user._id%>"><i class="fa-regular fa-credit-card" style="color: #ffffff; margin-right: 6px;"></i> Wallet</a></li>
                        <li><a href="#coupon"><i class="fa-solid fa-ticket" style="color: #ffffff;margin-right: 6px;"></i> Coupon</a></li>
                        <li><a href="/address/<%=user._id%>"><i class="fa-solid fa-map-location-dot" style="color: #ffffff;margin-right: 6px;"></i> Addresses</a></li>
                        <li><a href="#security"><i class="fa-solid fa-key" style="color: #ffffff;margin-right: 6px;"></i> Security</a></li>
                        <li><a href="#security"><i class="fa-solid fa-arrow-right-from-bracket" style="color: #ffffff;margin-right: 6px;"></i> Logout</a></li>
                    </ul>
                </div>

                <div class="content">
                    <h1 id="pageTitle">Welcome to the Addresses Page</h1>
                            <div class="address-card">
                                <h3>Home</h3>
                                <p><strong>House No/Name:</strong>House name</p>
                                <p><strong>State:</strong>Riyadh</p>
                                <p><strong>Country:</strong> KSA</p>
                                <p><strong>Pincode:</strong> 45839</p>
                                <p><strong>Landmark:</strong> near appolo hospital</p>
                                <a class="btn btn-outline-dark" href="/edit-address/<%=user._id%>">Edit Address</a>
                                <a class="btn btn-dark text-light">Delete Address</a>
                            </div>
                    <div class="box-buttons">
                        <a href="/" class="btn btn-danger">Go back</a>
                        <a href="/add-address/<%=user._id%>" class="btn btn-danger">Add address</a>
                    </div>
                </div>
            </div>
        <% } else { %>
            <h2>User not found</h2>
        <% } %>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
            const hamburgerMenu = document.querySelector('.hamburger-menu');
            hamburgerMenu.classList.toggle('active');
        }

        function addAddress() {
            // Add logic to handle adding address
            // You can use AJAX to send a request to the server
            // and update the user's address list
        }
    </script>

    <%-include('userFooter')%>
</body>
</html>
