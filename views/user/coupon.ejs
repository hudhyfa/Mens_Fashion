<%-include('userNavbar')%>
<body>
    <style>
        body {
            height: 100%;
            font-family: "Nunito Sans", sans-serif;
            -webkit-font-smoothing: antialiased;
            margin: 0;
        }

        .box {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 70vh;
        }

        #userContainer {
            width: 90%;
            display: flex;
            border: 1px solid black;
            border-radius: 15px;
            height: auto;
        }

        .sidebar {
            background-color: #000;
            color: #fff;
            padding: 20px;
            min-width: 200px;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            transition: 0.5s;
            margin-left: -15px;
            border-bottom-left-radius: 15px;
            border-top-left-radius: 15px;
        }

        .profile-icon {
            width: 100px;
            height: 100px;
            border: 1px solid red;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .profile-icon img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
        }

        .sidebar-list {
            list-style-type: none;
            padding: 0;
            text-align: left;
        }

        .sidebar-list a {
            text-decoration: none;
            color: #fff;
            padding: 10px;
            display: block;
            transition: 0.3s;
        }

        .sidebar-list a:hover {
            background-color: #333;
        }

        .sidebar-list a.active {
            background-color: #e53637;
            color: #fff;
        }

        .hamburger-menu {
            display: none;
            cursor: pointer;
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 999;
            transition: 0.5s;
        }

        .hamburger-menu div {
            width: 30px;
            height: 3px;
            background-color: #1e1d1d;
            margin: 4px 2px;
            transition: 0.4s;
        }

        .profile-welcome {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .content {
            margin: auto;
            width: 80%;
            height: auto;
            text-align: center;
            padding: 20px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
        }

        .content p {
            margin-bottom: 15px;
        }

        .coupons-container {
            width: 100%;
            height: auto;
            margin:20px auto;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

        .coupon {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 10px;
            margin-bottom: 10px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            width: 48% !important; 
        }

        .coupon-details{
            text-align: start;
        }

        .coupon-name {
            font-weight: bold;
        }

        .add-coupon-button {
            background-color: #e53637;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .add-coupon-button:hover {
            background-color: #c32434;
        }

        @media only screen and (max-width: 768px) {
            .sidebar {
                display: none;
            }

            .hamburger-menu {
                display: block;
            }

            .content {
                padding: 10px;
            }

            .box {
                height: auto;
                margin-bottom: 20px;
            }

            #userContainer {
                flex-direction: column;
                height: auto;
                width: 96%;
            }

            .hamburger-menu.active div:nth-child(1) {
                transform: rotate(-45deg) translate(-5px, 6px);
                background-color: #e53637;
            }

            .hamburger-menu.active div:nth-child(2) {
                opacity: 0;
            }

            .hamburger-menu.active div:nth-child(3) {
                transform: rotate(45deg) translate(-5px, -6px);
                background-color: #e53637;
            }

            .sidebar.active {
                display: flex;
                flex-direction: column;
                align-items: center;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: #000;
                z-index: 998;
            }
        }
    </style>

    <div class="box">
        <div class="hamburger-menu" onclick="toggleSidebar()">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <% if (user) { %>
            <div class="container" id="userContainer">
                
                <%- include('profile-sidebar') %>

                <div class="content">
                    <h1 id="pageTitle">Coupons</h1>
                    <div class="coupons-container">
                        <% coupons.forEach((coupon) => { %>
                                <div class="coupon">
                                    <div class="coupon-details">
                                        <h6 class="coupon-name"><%=coupon.coupon_code%></h6>
                                        <input type="text" id="couponCode" value="<%=coupon.coupon_code%>" hidden>
                                        <%if(coupon.type === "flat") { %>
                                            <p> flat $<%=coupon.discount%> off on purchases above $<%=coupon.min_purchase_amount%></p>
                                        <% } else { %>
                                            <p> <%=coupon.discount%> % off on purchases above: $<%=coupon.min_purchase_amount%></p>
                                        <% } %>      
                                        <p>Expires at: <%= coupon.expiry_date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                                    </div>
                                    <button class="btn btn-sm btn-outline-danger" onclick="copyCouponCode('<%=coupon._id%>')">Copy</button>
                                </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        <% } else { %>
            <h2>User not found</h2>
        <% } %>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
            const hamburgerMenu = document.querySelector('.hamburger-menu');
            hamburgerMenu.classList.toggle('active');
        }

        function copyCouponCode() {
            const couponCode = document.getElementById('couponCode').value;
            console.log("couponCode: ", couponCode);
            navigator.clipboard.writeText(couponCode)
                .then(() => {
                    alert('Coupon code copied to clipboard!');
                    // Optionally, display a success message to the user
                })
                .catch(err => {
                    console.log('Failed to copy coupon code:', err);
                    // Optionally, handle the error gracefully
                });
        }

    </script>

    <%-include('userFooter')%>
</body>
</html>
