<%-include('userNavbar')%>

<body>
    <style>
        body {
            background-color: #fff;
            color: #333;
            margin: 0;
            font-family: 'Nunito Sans', sans-serif;
        }
        
        .loginSection{
            background-color: #eeeeee;
            color: #333;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-form {
            max-width: 400px;
            padding: 30px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #f5f5f5;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s;
        }

        .login-form:hover {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-size: 18px;
            margin-bottom: 5px;
            color: #555;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            background-color: #eee;
            color: #333;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: border-color 0.3s;
        }

        .form-group input:focus {
            border-color: #e74c3c;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }

        .submit-btn {
            background-color: #333;
            color: #fff;
            border: none;
            padding: 10px 30px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s, transform 0.3s;
        }

        .submit-btn:hover {
            background-color: #555;
            transform: scale(1.05);
        }

        .social-login {
            margin-top: 20px;
        }

        .social-login-btn {
            background-color: #e74c3c;
            color: #fff;
            border: 1px solid #ddd;
            padding: 10px 20px;
            margin: 0 10px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s, transform 0.3s;
        }

        .social-login-btn:hover {
            background-color: #c0392b;
            transform: scale(1.05);
        }

        .signup-link,
        .forgot-password {
            color: #e74c3c;
            text-decoration: none;
            margin-top: 10px;
            display: block;
            transition: color 0.3s;
        }

        .signup-link:hover,
        .forgot-password:hover {
            color: #c0392b;
        }
        @media only screen and (max-width: 768px) {
            .loginSection {
                height: auto;
                padding: 20px;
            }

            .login-form {
                max-width: 100%;
                margin: 0 auto;
            }

            .form-group input {
                width: calc(100% - 20px);
            }
}

@media only screen and (max-width: 576px) {
    .form-group input {
        width: calc(100% - 10px);
    }

    .social-login-btn,
    .submit-btn {
        width: 100%;
    }

    .header__menu {
        display: none;
    }

    .canvas__open {
        display: block;
    }

    .header__top__links,
    .header__top__hover,
    .offcanvas__nav__option {
        display: none;
    }
}
    </style>
   

    <div class="loginSection">
        <div class="login-form">
            <h2>Login</h2>
            <form action="/user_login" method="post">
                <div class="form-group mt-2">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="err_msg my-3">
                    <% if(flash.loginError) { %>
                    <h6 style="color: #e74c3c;"><%=flash.loginError%></h6>
                    <% }else if(flash.invalidCreds) { %>
                    <h6 style="color: #e74c3c;"><%=flash.invalidCreds%></h6>
                    <% }else if(flash.errPass) { %>
                    <h6 style="color: #e74c3c;"><%=flash.errPass%></h6>
                    <% }else if(flash.errEmail) { %>
                    <h6 style="color: #e74c3c;"><%=flash.errEmail%></h6>
                    <% }else if(flash.errStatus) { %>
                    <h6 style="color: #e74c3c;"><%=flash.errStatus%></h6>
                    <% } %>
                </div>
                <div class="form-actions">
                    <button type="submit" class="submit-btn">Login</button>
                    <a href="#" class="forgot-password">Forgot Password?</a>
                </div>
            </form>
        
            <div class="social-login">
                <button class="social-login-btn">Login with Google</button>
            </div>
        
            <a href="/email_validation" class="signup-link">Don't have an account? Sign up here</a>
        </div>
    </div>

    
    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search End -->
    <%-include('userFooter')%>
    
</body>
</html>