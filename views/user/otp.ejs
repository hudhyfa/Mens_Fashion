
<%-include('userNavbar')%>

<body>
    <style>
        body {
            background-color: #f2f2f2;
            color: #333;
            margin: 0;
            font-family: 'Nunito Sans', sans-serif;
        }
    
        .full-height {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    
        .otp-container {
            max-width: 500px;
            padding: 30px;
            text-align: center;
            border: 2px solid #333;
            border-radius: 15px;
            background-color: #fff;
            transition: box-shadow 0.3s;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    
        .otp-container:hover {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }
    
        .otp-input-group {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    
        .otp-input {
            width: 200px;
            height: 40px;
            margin: 10px;
            font-size: 20px;
            text-align: center;
            border: 2px solid #333;
            border-radius: 10px;
            transition: border-color 0.3s, transform 0.3s;
            transition-timing-function: ease-out;
        }
    
        .otp-input:hover,
        .otp-input:focus {
            border-color: #e74c3c;
            transform: scale(1.05);
        }
    
        .submit-btn {
            background-color: #333;
            color: #fff;
            border: none;
            padding: 15px 30px;
            cursor: pointer;
            border-radius: 10px;
            transition: background-color 0.3s, transform 0.3s;
        }
    
        .submit-btn:hover {
            background-color: #555;
            transform: scale(1.05);
        }
    
        .resend-link {
            color: #e74c3c;
            text-decoration: none;
            margin-top: 20px;
            display: block;
        }
    
        .resend-link:hover {
            color: #333;
        }
    
        /* Responsive styles */
    
        @media only screen and (max-width: 768px) {
            .otp-container {
                max-width: 90%;
            }
    
            .otp-input {
                width: 100%;
            }
    
            .submit-btn {
                width: 100%;
            }
        }
    
        @media only screen and (min-width: 769px) and (max-width: 1024px) {
            .otp-container {
                max-width: 70%;
            }
        }
    </style>

    <!-- OTP Section Begin -->
    <div class="full-height">
        <div class="otp-container">
            <h2>Enter Your Four-Digit OTP</h2>
            <form action="/otp_verification" method="post">
                <div class="otp-input-group">
                    <input type="text" class="otp-input" maxlength="4" id="otp" name="otp"/>
                </div>
                <div class="err_msg my-3">
                    <% if(flash.invalidOtp){ %>
                    <h6 style="color: #e74c3c;"><%=flash.invalidOtp%></h6>
                    <% }else if(flash.validationError){ %>
                    <h6 style="color: #e74c3c;"><%=flash.validationError%></h6>
                    <% }else if(flash.expiredOtp){ %>
                    <h6 style="color: #e74c3c;"><%=flash.expiredOtp%></h6>
                    <% }else if(flash.otpInfo){ %>
                    <h6 style="color: rgb(80, 233, 126);"><%=flash.otpInfo%></h6>
                    <% }else if(flash.resendOtp){ %>
                    <h6 style="color: rgb(80, 233, 126);"><%=flash.resendOtp%></h6>
                    <% } %>
                </div>
                <br>
                <button type="submit" class="submit-btn">Submit</button>
            </form>
            <form action="/otp_resent" id="resend-form" method="post">
                <a style="cursor: pointer;" onclick="document.getElementById('resend-form').submit()" class="resend-link">Resend OTP</a>
            </form>
        </div>
    </div>
    <!-- OTP Section End -->

    
    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search End -->
    
    <%-include('userFooter')%>
    
</body>

</html>