<%-include('userNavbar')%>
<body>
    <style>
        body {
            height: 100%;
            font-family: "Nunito Sans", sans-serif;
            -webkit-font-smoothing: antialiased;
            margin: 0;
        }

        .box {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 70vh;
        }

        #userContainer {
            width: 90%;
            display: flex;
            border: 1px solid black;
            border-radius: 15px;
            height: 80%;
        }


        .sidebar {
            background-color: #000;
            color: #fff;
            padding: 20px;
            min-width: 200px;
            height: 100%;
            /* height: 50%; */
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            transition: 0.5s;
            margin-left: -15px;
            border-bottom-left-radius: 15px;
            border-top-left-radius: 15px;
        }

        .profile-icon {
            width: 100px;
            height: 100px;
            border: 1px solid red;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .profile-icon img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
        }

        .sidebar-list {
            list-style-type: none;
            padding: 0;
            text-align: left;
        }

        .sidebar-list a {
            text-decoration: none;
            color: #fff;
            padding: 10px;
            display: block;
            transition: 0.3s;
        }

        .sidebar-list a:hover {
            background-color: #333;
        }

        .hamburger-menu {
            display: none;
            cursor: pointer;
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 999;
            transition: 0.5s;
        }

        .hamburger-menu div {
            width: 30px;
            height: 3px;
            background-color: #1e1d1d;
            margin: 4px 2px;
            transition: 0.4s;
        }

        @media only screen and (max-width: 768px) {
            .sidebar {
                display: none;
            }

            .hamburger-menu {
                display: block;
            }

            .content {
                margin-left: 0;
            }

            .box {
                height: auto;
                margin-bottom: 20px;
            }

            #userContainer {
                flex-direction: column;
                height: auto;
                width: 96%;
            }

            .hamburger-menu.active div:nth-child(1) {
                transform: rotate(-45deg) translate(-5px, 6px);
                background-color: #e53637;
            }

            .hamburger-menu.active div:nth-child(2) {
                opacity: 0;
            }

            .hamburger-menu.active div:nth-child(3) {
                transform: rotate(45deg) translate(-5px, -6px);
                background-color: #e53637;
            }

            .sidebar.active {
                display: flex;
                flex-direction: column;
                align-items: center;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: #000;
                z-index: 998;
            }
        }
    </style>

    <div class="box">
        <div class="hamburger-menu" onclick="toggleSidebar()">
            <div></div>
            <div></div>
            <div></div>
        </div>
    
        <div class="container" id="userContainer">
            <div class="sidebar" id="sidebar">
                <div class="profile-icon">
                    <img src="https://previews.123rf.com/images/asmati/asmati1706/asmati170606229/80944205-user-avatar-illustration-anonymous-sign-vector-white-icon-with-soft-shadow-on-transparent-background.jpg" alt="">
                </div>
                <ul class="sidebar-list">
                    <li><a href="#profile" onclick="changeContent('Profile')"><i class="fas fa-user"></i> Profile</a></li>
                    <li><a href="#valet" onclick="changeContent('Valet')"><i class="fas fa-wallet"></i> Valet</a></li>
                    <li><a href="#coupon" onclick="changeContent('Coupon')"><i class="fas fa-tag"></i> Coupon</a></li>
                    <li><a href="#addresses" onclick="changeContent('Addresses')"><i class="fas fa-map-marker-alt"></i> Addresses</a></li>
                    <li><a href="#security" onclick="changeContent('Security')"><i class="fas fa-lock"></i> Security</a></li>
                </ul>
            </div>
    
            <div class="content">
                <!-- Display the current page name -->
                <h1 id="pageTitle">Welcome to the User Profile Page</h1>
            </div>
    
        </div>
    </div>


    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
            const hamburgerMenu = document.querySelector('.hamburger-menu');
            hamburgerMenu.classList.toggle('active');
        }

        function changeContent(page) {
            const pageTitle = document.getElementById("pageTitle");
            pageTitle.textContent = `Welcome to the ${page} Page`;
            toggleSidebar(); // Hide the sidebar after clicking a link
            event.preventDefault(); // to prevent the default action
        }
    </script>

    <%-include('userFooter')%>
</body>
</html>
