<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            display: flex;
            overflow-x: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #333;
            padding-top: 20px;
            height: 100vh;
            overflow-y: auto;
            position: fixed;
            transition: 0.3s;
        }

        .sidebar a {
            padding: 15px 10px;
            text-decoration: none;
            font-size: 18px;
            color: white;
            display: block;
            transition: 0.3s;
        }
        .sidebar a:hover {
            background-color: #555;
        }
        .sidebar a.active {
            background-color: #555;
        }

        .sidebar a.active:hover {
            background-color: #555;
        }

        .content {
            flex: 1;
            padding: 20px;
            margin-left: 250px;
            transition: margin-left 0.3s;
        }

        .profile-container,
        .orders-container,
        .addresses-container,
        .coupons-container,
        .password-container {
            background-color: white;
            color: #333;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            transition: 0.3s;
        }

        .circle-profile {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            overflow: hidden;
            margin-bottom: 20px;
            position: relative;
        }

        .circle-profile img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .insert-image {
            font-size: 16px;
            color: #e74c3c;
            cursor: pointer;
            display: block;
            text-align: center;
            margin-top: 10px;
            transition: 0.3s;
        }

        .insert-image:hover {
            color: #c0392b;
        }

        .card {
            border: 1px solid #ddd;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            transition: 0.3s;
        }

        .card:hover {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }

        .card img {
            width: 100%;
            height: auto;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .card-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-description {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .card-button {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s, transform 0.3s;
        }

        .card-button:hover {
            background-color: #c0392b;
            transform: scale(1.05);
        }

        .password-form {
            display: flex;
            flex-direction: column;
        }

        input,
        button {
            margin-top: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .valet-container {
          border:#555 solid 0.5px;
          padding: 30px;
          border-radius: 20px;
        }

        .valet-balance {
            font-size: 24px;
            margin: 20px 0;
        }

        .valet-buttons {
            display: flex;
            flex-direction: column; /* Stack buttons vertically */
        }

        /* Style for Transaction History section */
        .transaction-history {
            margin-top: 20px;
        }

        .transaction-history-item {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
        }

        /* Color Theme */
        .sidebar {
            background-color: #333;
        }
         /* Additional styles for interactive elements */
         input,
        button {
            margin-top: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

/* Responsive Styles */
@media only screen and (max-width: 768px) {
    .sidebar {
        width: 100%;
        max-width: 250px; /* Set a maximum width for the sidebar */
        position: relative;
        margin-left: 0;
    }

    .content {
        margin-left: 0;
    }

    .sidebar.active {
        margin-left: 0;
    }

    .content.active {
        margin-left: 0;
    }

    .profile-container,
    .orders-container,
    .addresses-container,
    .coupons-container,
    .password-container,
    .valet-container {
        width: 100%;
        margin-left: 0;
    }

    .circle-profile {
        width: 100px; /* Adjust the circle size for smaller screens */
        height: 100px;
    }

    .sidebar a {
                display: block;
                padding: 15px 10px;
                text-decoration: none;
                font-size: 18px;
                color: white;
            }

    .sidebar {
          overflow-y: hidden;
    }

    .card {
        padding: 15px; /* Adjust the padding for card elements */
    }

    .card-title {
        font-size: 18px; /* Adjust the font size for card titles */
    }

    .card-description {
        font-size: 14px; /* Adjust the font size for card descriptions */
    }

    /* Additional styles for interactive elements */
    input,
    button {
        width: 100%; /* Make input and button elements full width on smaller screens */
    }
}


       

        
    </style>
</head>

<body>

    <div class="sidebar" id="sidebar">
        <a href="#" onclick="showSection('profile')">Profile</a>
        <a href="#" onclick="showSection('orders')">Orders</a>
        <a href="#" onclick="showSection('addresses')">Addresses</a>
        <a href="#" onclick="showSection('coupons')">Coupons</a>
        <a href="#" onclick="showSection('password')">Password</a>
        <a href="#" onclick="showSection('valet')">Valet</a>
    </div>

    <div class="content" id="content">
        <div id="profile" class="profile-container">
            <h2>Profile</h2>
            <div class="circle-profile">
                <img src="profile-default.jpg" alt="Profile Picture">
            </div>
            <div class="insert-image" onclick="insertImage()">Insert Image</div>
            <div>
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" readonly value="JohnDoe">
            </div>
            <div>
                <label for="phone">Phone:</label>
                <input type="text" id="phone" name="phone" readonly value="123-456-7890">
            </div>
        </div>

        <div id="orders" class="orders-container">
            <h2>Orders</h2>
            <div class="card">
                <img src="product1.jpg" alt="Product Image">
                <div class="card-title">Order #12345</div>
                <div class="card-description">Product: Lorem Ipsum</div>
                <div class="card-description">Price: $50.00</div>
                <div class="card-description">Quantity: 2</div>
                <div class="card-description">Size: M</div>
                <div class="card-description">Status: Delivered</div>
                <button class="card-button">Return</button>
                <button class="card-button">Cancel</button>
            </div>
        </div>

        <div id="addresses" class="addresses-container">
            <h2>Addresses</h2>
            <div class="card">
                <div class="card-title">Home</div>
                <div class="card-description">John Doe</div>
                <div class="card-description">123 Main Street</div>
                <div class="card-description">City: Lorem Ipsum</div>
                <div class="card-description">Country: Ipsum</div>
            </div>
        </div>

        <div id="coupons" class="coupons-container">
            <h2>Coupons</h2>
            <div class="card">
                <div class="card-title">50% Off</div>
                <div class="card-description">Code: COUPON50</div>
                <div class="card-description">Description: Lorem Ipsum</div>
            </div>
        </div>

        <div id="password" class="password-container">
            <h2>Password</h2>
            <form class="password-form">
                <label for="currentPassword">Current Password:</label>
                <input type="password" id="currentPassword" name="currentPassword" required>
                <label for="newPassword">New Password:</label>
                <input type="password" id="newPassword" name="newPassword" required>
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
                <button type="button" class="card-button" onclick="changePassword()">Change Password</button>
            </form>
        </div>
    </div>

    <div id="valet" class="valet-container">
        <div class="valet-balance">User's Balance: $1000</div>
        <div class="valet-buttons">
            <button onclick="withdrawMoney()">Withdraw</button>
            <button onclick="addMoreMoney()">Add More</button>
        </div>
        <div class="transaction-history">
            <div class="transaction-history-item">+$500 credited - 2023-11-17 10:30 AM</div>
            <div class="transaction-history-item">-$200 debited - 2023-11-16 03:15 PM</div>
            <!-- Add more transaction history items dynamically using JavaScript -->
        </div>
    </div>

    <!-- <button onclick="toggleSidebar()">Toggle Menu</button> -->

    <script>
        // Add this script to set the "Profile" link as active by default
        document.addEventListener('DOMContentLoaded', function () {
            showSection('profile');
        });

        function showSection(section) {
            // Hide all sections
            document.getElementById('profile').style.display = 'none';
            document.getElementById('orders').style.display = 'none';
            document.getElementById('addresses').style.display = 'none';
            document.getElementById('coupons').style.display = 'none';
            document.getElementById('password').style.display = 'none';
            document.getElementById('valet').style.display = 'none';

            // Remove 'active' class from all links
            var links = document.getElementById('sidebar').getElementsByTagName('a');
            for (var i = 0; i < links.length; i++) {
                links[i].classList.remove('active');
            }

            // Show the selected section
            document.getElementById(section).style.display = 'block';

            // Add 'active' class to the selected link
            document.querySelector(`#sidebar a[href="#"][onclick*="${section}"]`).classList.add('active');
        }

        function insertImage() {
            // Implement image insertion logic here
            alert('Insert Image clicked');
        }

        function changePassword() {
            // Implement password change logic here
            alert('Change Password clicked');
        }

        function withdrawMoney() {
            alert('Withdraw Money clicked');
        }

        function addMoreMoney() {
            alert('Add More Money clicked');
        }

        
    </script>

    

</body>

</html>
