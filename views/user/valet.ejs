<%-include('userNavbar')%>
<body>
    <style>
        body {
            height: 100%;
            font-family: "Nunito Sans", sans-serif;
            -webkit-font-smoothing: antialiased;
            margin: 0;
        }

        .box {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 70vh;
        }

        #userContainer {
            width: 90%;
            display: flex;
            border: 1px solid black;
            border-radius: 15px;
            height: 80%;
        }

        .sidebar {
            background-color: #000;
            color: #fff;
            padding: 20px;
            min-width: 200px;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            transition: 0.5s;
            margin-left: -15px;
            border-bottom-left-radius: 15px;
            border-top-left-radius: 15px;
        }

        .profile-icon {
            width: 100px;
            height: 100px;
            border: 1px solid red;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .profile-icon img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
        }

        .sidebar-list {
            list-style-type: none;
            padding: 0;
            text-align: left;
        }

        .sidebar-list a {
            text-decoration: none;
            color: #fff;
            padding: 10px;
            display: block;
            transition: 0.3s;
        }

        .sidebar-list a:hover {
            background-color: #333;
        }

        .sidebar-list a.active {
            background-color: #e53637;
            color: #fff;
        }

        .hamburger-menu {
            display: none;
            cursor: pointer;
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 999;
            transition: 0.5s;
        }

        .hamburger-menu div {
            width: 30px;
            height: 3px;
            background-color: #1e1d1d;
            margin: 4px 2px;
            transition: 0.4s;
        }

        .profile-welcome {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .content {
            text-align: center;
            padding: 20px;
        }

        .content p {
            margin-bottom: 15px;
        }

        .valet-balance {
            font-size: 36px;
            margin-bottom: 20px;
        }

        .add-valet-money {
            margin-bottom: 20px;
        }

        #transaction-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        #transaction-table th, #transaction-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        #transaction-table th {
            background-color: #f2f2f2;
        }

        .box-buttons {
            margin: 10px;
            float: right;
        }

        @media only screen and (max-width: 768px) {
            .sidebar {
                display: none;
            }

            .hamburger-menu {
                display: block;
            }

            .content {
                padding: 10px;
            }

            .box {
                height: auto;
                margin-bottom: 20px;
            }

            #userContainer {
                flex-direction: column;
                height: auto;
                width: 96%;
            }

            .hamburger-menu.active div:nth-child(1) {
                transform: rotate(-45deg) translate(-5px, 6px);
                background-color: #e53637;
            }

            .hamburger-menu.active div:nth-child(2) {
                opacity: 0;
            }

            .hamburger-menu.active div:nth-child(3) {
                transform: rotate(45deg) translate(-5px, -6px);
                background-color: #e53637;
            }

            .sidebar.active {
                display: flex;
                flex-direction: column;
                align-items: center;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: #000;
                z-index: 998;
            }

            .image-box{
                display: flex;
                flex-direction: column;
            }

            #username{
                width: auto;
            }

        }
    </style>


    <div class="box">
        <div class="hamburger-menu" onclick="toggleSidebar()">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <% if(user) { %>
        <div class="container" id="userContainer">
            <div class="sidebar" id="sidebar">
                <div class="profile-icon">
                    <img src="<%=user.userProfile%>" alt="profile img">
                </div>
                <ul class="sidebar-list">
                    <li><a href="/user-profile/<%=user._id%>"><i class="fa-regular fa-address-card" style="color: #f7f9fc;margin-right: 6px;"></i> Profile</a></li>
                    <li><a href="/wallet/<%=user._id%>"><i class="fa-regular fa-credit-card" style="color: #ffffff; margin-right: 6px;"></i> Wallet</a></li>
                    <li><a href="#coupon"><i class="fa-solid fa-ticket" style="color: #ffffff;margin-right: 6px;"></i> Coupon</a></li>
                    <li><a href="/address/<%=user._id%>"><i class="fa-solid fa-map-location-dot" style="color: #ffffff;margin-right: 6px;"></i> Addresses</a></li>
                    <li><a href="/security/<%=user._id%>"><i class="fa-solid fa-key" style="color: #ffffff;margin-right: 6px;"></i> Security</a></li>
                    <li><a href="#security"><i class="fa-solid fa-arrow-right-from-bracket" style="color: #ffffff;margin-right: 6px;"></i> Logout</a></li>
                </ul>
            </div>

            <div class="content">
                <h1 id="pageTitle">Welcome to the MXF Wallet</h1>
                <p class="profile-welcome">Hello, <%= user.username %>!</p>
                <div class="valet-balance">
                    Wallet Balance: $ 29999
                </div>
                <div class="add-valet-money">
                    <label for="addValetMoney">Add Wallet Money:</label>
                    <input type="text" id="addValetMoney" placeholder="Enter amount">
                    <button onclick="addValetMoney()">Add Money</button>
                </div>
                <table class="table table-hover" id="transaction-table">
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Type</th>
                    </tr>
                    <tr>
                        <td>20 Dec 2023</td>
                        <td>599</td>
                        <td>Credited</td>
                    </tr>
                    <tr>
                        <td>20 Dec 2023</td>
                        <td>599</td>
                        <td>Credited</td>
                    </tr>
                </table>
                <div class="box-buttons">
                    <a href="/" class="btn btn-danger">Go back</a>
                </div>
            </div>

            <% } else { %>
                <h2>user not found</h2>
            <% } %>
            </div>
        </div>
    </div>




    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
            const hamburgerMenu = document.querySelector('.hamburger-menu');
            hamburgerMenu.classList.toggle('active');
        }

        const links = document.querySelectorAll('.sidebar-list a');
        links.forEach(link => link.classList.remove('active'));
        event.target.classList.add('active');

    </script>

    <%-include('userFooter')%>
</body>
</html>
